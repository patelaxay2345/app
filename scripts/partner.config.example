# Partner Configuration Example
# Copy this file and fill in your actual values
# DO NOT commit this file with real credentials

# Partner Information
export PARTNER_NAME="YourPartnerName"

# Database Configuration (MySQL)
export PARTNER_DB_HOST="database.example.com"
export PARTNER_DB_PORT="3306"
export PARTNER_DB_NAME="partner_database"
export PARTNER_DB_USER="db_username"
export PARTNER_DB_PASSWORD="db_password"

# SSH Tunnel Configuration
export PARTNER_SSH_HOST="ssh.example.com"
export PARTNER_SSH_PORT="22"
export PARTNER_SSH_USER="ssh_username"

# SSH Authentication (choose one)
# Option 1: SSH Private Key
export PARTNER_SSH_KEY="$(cat ~/.ssh/partner_key)"

# Option 2: SSH Password
# export PARTNER_SSH_PASSWORD="ssh_password"

# Concurrency Settings
export PARTNER_CONCURRENCY_LIMIT="50"

# Usage:
# 1. Copy this file: cp partner.config.example partner.config
# 2. Edit partner.config with your values
# 3. Source it: source partner.config
# 4. Run: python3 scripts/add-partner.py
